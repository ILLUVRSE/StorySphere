{
  "name": "storysphere-backend",
  "version": "0.1.0",
  "description": "Backend for StorySphere - Local-first personal studio",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/backend/src/index.js",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "worker": "ts-node src/worker.ts",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bullmq": "^4.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "minio": "^7.1.3",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/minio": "^7.1.0",
    "@types/node": "^20.19.25",
    "@types/pg": "^8.10.7",
    "@types/socket.io-client": "^1.4.36",
    "@types/uuid": "^10.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
